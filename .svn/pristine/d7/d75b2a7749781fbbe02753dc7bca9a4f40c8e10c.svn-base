function TabNav(obj1,cls,obj2){
	var obj1=$(obj1);
	var obj2=$(obj2);
	var navLi=obj1.find("li");
	navLi.click(function(){
		var i=$(this).index();
		navLi.removeClass(cls);
		$(this).addClass(cls);
		obj2.hide();
		obj2.eq(i).show();
		})
	}
function AutoScroll(obj) {

            $(obj).find("ul:first").animate({
                marginTop: "-25px"
            }, 500, function() {
                $(this).css({ marginTop: "0px" }).find("li:first").appendTo(this);
            });
        }

function DY_scroll(wraper,prev,next,nav,img,speed,or)
    {
	
    var wraper = $(wraper);
    var prev = $(prev);
    var next = $(next);
	var nav= $(nav);
    var img = $(img).find('ul');
    var w = img.find('li').outerWidth(true);
    var s = speed;
	var i=0;
	var l=img.find('li').length;
    next.click(function()
    {
	
	i++;
	if(i==l){
		i=0;
		}
	nav.find('li').removeClass('on');
	nav.find("li:eq("+i+")").addClass('on');
	
 /*   img.find('li').fadeOut();
    img.find("li:eq("+i+")").fadeIn();*/
    
    img.animate({'margin-left':-w},function()
    {
    img.find('li').eq(0).appendTo(img);
    img.css({'margin-left':0});
    });
    });
    prev.click(function()
    {
	i--;
	if(i==-1){
		i=l-1;
		}
     nav.find('li').removeClass('on');
	nav.find("li:eq("+i+")").addClass('on');
	 img.find('li:last').prependTo(img);
    img.css({'margin-left':-w});
    img.animate({'margin-left':0});
    /*img.find('li').hide();
    img.find("li:eq("+i+")").show();*/
    });
    if (or == true)
    {
    ad = setInterval(function() { next.click();},s*1000);
    wraper.hover(function(){clearInterval(ad);},function(){ad = setInterval(function() { next.click();},s*1000);});
    }
    }

