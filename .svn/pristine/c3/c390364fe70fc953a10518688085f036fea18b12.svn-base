@charset "utf-8";
/* 共用 */

.k3 {
	clear: both;
	height: 4px;
	overflow: hidden;
	width: 100%;
}
.clear:after {
	visibility:hidden;
	display:block;
	font-size:0;
	content:" ";
	clear:both;
	height:0;
}
.pd0{padding:0;}
img{border:none;
vertical-align: top;}
.f_l {
	float:left;
}
.f_r {
	float:right;
}
.con {
	margin-bottom:52px;
}

/* con_head */
.con_header {
	padding:1% 2%;
}
.con_header .logo {
	width:40%;
	display:inline-block;
	height:30px;
	line-height:30px;
	float:left;
}
.con_header .wx_pay {
	float:right;
	width:58%;
	height:30px;
	line-height:30px;
	text-align:right;
}
.con_header img {
	vertical-align:middle;
}
.con_header span {
	vertical-align:middle;
}
.hr0{border:none; border-top: 1px solid #f3f3f3; width: 100%;}
/*img_scroll*/
.img_scroll {
	width:100%;
	overflow:hidden;
	position:fixed;
	top:0;
	left: 0;
	z-index: 99;
	background: #f3f3f3;
}
.img-list {
	overflow: hidden;
	position: relative;
}
.img-list ul {
	width: 9999px;
}
.img_scroll .img-list li {
	float:left;
}
.JQ-slide-nav {
	position:absolute;
	bottom:7px;
	right:7px;
	height:10px;
	z-index:1;
}
.JQ-slide-nav li {
	height:7px;
	width:10px;
	height: 10px;
	margin-right: 3px;
	background:#b2b2b2;
	border-radius: 5px;
	float:left;
}
.JQ-slide-nav li.on {
	background:#f35286;
}
/*txt_scroll*/
.txt_scroll {
	padding:0 2%;
}
.txt_scroll .tb {
	float:left;
	width:8%;
}
.txt_scroll .tb img{
	width:25px;
	vertical-align:middle;
	margin-right:2%;}
.txt_scroll .txt_list {
	float:right;
	width:90%;
	height:25px;
	line-height:25px;
	overflow:hidden;
}
.txt_scroll .txt_list li {
	height:25px;
	line-height:25px;
	word-break:keep-all;           /* 不换行 */
	white-space:nowrap;          /* 不换行 */
	overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
	text-overflow:ellipsis;
}
