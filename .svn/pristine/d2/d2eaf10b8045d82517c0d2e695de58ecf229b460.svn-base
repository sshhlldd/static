$('.ck_checkbox i').click(function(event) {
  $(this).toggleClass('ck_checked');
  if($(this).hasClass('ck_checked')){
    $(this).css({'border':'1px solid #f05484'})
  }else{
    $(this).css({'border':'1px solid #e1e1e1'})
  }
});
$('.fl_abso i').click(function(event) {
  if($(this).hasClass('ck_checked')){
    $('.ck_checkbox i').addClass('ck_checked');
    $('.ck_checkbox i').css({'border':'1px solid #f05484'})
  }else{
     $('.ck_checkbox i').removeClass('ck_checked');
    $('.ck_checkbox i').css({'border':'1px solid #e1e1e1'})
  }


});
//商品详情和用户评价 滚动置顶 固定位置
var oldTop = $(".ck_tab_nav").offset().top; 
$(window).scroll(function() {
  var offTop = $(".ck_tab_nav").offset().top; 
  var scrTop = $(document).scrollTop();
  var cha = offTop-scrTop;
  if(offTop < oldTop){ 
     $(".ck_tab_nav").css({'position':'relative'});
  }
  if(cha < 0){ 
    $(".ck_tab_nav").css({'position':'fixed'});
  }
  //document.title = offTop;
});