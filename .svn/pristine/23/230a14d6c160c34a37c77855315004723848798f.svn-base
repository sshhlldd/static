// 下方导航
var onOFF = $("#onOFF");
var change = $(".ck_Bbox_div");
onOFF.click(function(){
      $(this).hide();
      change.animate({width:'toggle'},"slow",function(){ 
          if(onOFF.hasClass('ck_BnavBtn_in')){ 
             $("#onOFF").show();
             onOFF.attr({class:"ck_BnavBtn_out"});
          }else{ 
            $("#onOFF").show();
             onOFF.attr({class:"ck_BnavBtn_in"});
          }
      });
}); 
var ii=0;
// 生日蛋糕与生日礼物 导航切换
$(".ck_qiehuan").click(function(){ 
   ii=$(this).index();
   var par=$(this).parents(".ck_con")
 
   if(ii==0){
     par.removeClass('act1')
     par.addClass('act0');
   }
   if(ii==1){
    par.removeClass('act0')
    par.addClass('act1');
   }
  
});
