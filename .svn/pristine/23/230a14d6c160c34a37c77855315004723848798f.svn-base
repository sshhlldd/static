// 城市筛选按钮
var btn_city = $(".btn_city");
var cityBox = $(".cityBox");
var city_close = $(".city_close");
btn_city.click(function(){ 
    $('.j_popBox_cover').fadeIn();
    $(".popBox").animate({right:'-230px'},"fast",function(){ 
       cityBox.animate({left:'0px'},"slow");
    });
   
}); 

$(".city_shaixuan span").click(function(){
    var cityName = $(this).text();
    btn_city.find('em').text(cityName);
    cityBox.animate({left:'-225px'},"fast");
    $('.j_popBox_cover').fadeOut();
});
$('.j_popBox_cover').click(function(){ 
    $(this).fadeOut();
    $(".popBox").eq(ii).animate({right:'-230px'},"fast");
    $(".cityBox").animate({left:'-225px'},"fast");
});   
// 筛选按钮内部
