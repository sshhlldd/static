var pop_r_div_p = $(".pop_r div p");   
pop_r_div_p.click(function(){ 
   $(this).parent().children("p").attr("class"," ");
   $(this).attr("class","over");
});

$(".pop_clear").click(function(){ 
   $(".pop_r div p").attr("class"," ");
});




