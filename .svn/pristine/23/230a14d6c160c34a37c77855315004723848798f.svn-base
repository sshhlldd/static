//商品详情和用户评价tab切换
$(".ck_tab_nav li").click(function(){ 
     var av=$(this).index();
     $(this).attr("class","over").siblings().attr("class","");
     $(".ck_tab_div dl").eq(av).removeClass("hide").siblings().addClass("hide");     
});
//商品详情和用户评价 滚动置顶 固定位置
var oldTop = $(".ck_tab_nav").offset().top; 
$(window).scroll(function() {
  var offTop = $(".ck_tab_nav").offset().top; 
  var scrTop = $(document).scrollTop();
  var cha = offTop-scrTop;
  if(offTop < oldTop){ 
     $(".ck_tab_nav").css({'position':'relative'});
  }
  if(cha < 0){ 
    $(".ck_tab_nav").css({'position':'fixed'});
  }
  //document.title = offTop;
});

